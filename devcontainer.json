{
    "name": "LanguageTutor",
    "image": "python:3.11",
    "postCreateCommand": "curl https://sdk.cloud.google.com | bash && python3 -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
    "runArgs": [ "-v", "/home/codespace/.config:/root/.config" ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "args": []
                    }
                },
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.pythonPath": ".venv/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.autopep8Path": ".venv/bin/autopep8",
                "python.formatting.blackPath": ".venv/bin/black",
                "python.linting.flake8Path": ".venv/bin/flake8",
                "python.formatting.autopep8Args": ["--max-line-length", "120"],
                "python.linting.pylintArgs": ["--max-line-length", "120"]
            }
        }
    }
}
